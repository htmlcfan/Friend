@{
   Layout = "~/Views/Shared/_Index_Layout.cshtml";
}
<script src="~/ViewScript/Admin.js"></script>
<div id="loading" style="display: none;">
   <img alt="数据正在加载中..." src="~/Content/images/loading02.gif" />
</div>
<div data-options="region:'center'" style="overflow: hidden;">
   <!-------------------------------详细信息展示表格----------------------------------->
   <table id="grid" title="用户管理" iconcls="icon-view"></table>
   <div id="divtoolbar" style="padding: 5px;">
      <input id="btnSearch" menu="#search_menu" style="width: 300px" />
      <div id="search_menu" style="width: 300px">
         <div name="UserName">用户名</div>
      </div>
   </div>
</div>
<!--设置添加的弹出层-->
<div id="AddDialog" class="easyui-dialog" style="width: 650px; padding: 1px" closed="true" resizable="true" modal="true" data-options="iconCls: 'icon-add',buttons: '#dlg-buttons'">
   <form id="addForm" method="post" novalidate="novalidate">
      <div class="talbe_border">
         <table id="tblAdd" border="0" cellpadding="0" cellspacing="0" class="talbe_list">
            <tr>
               <th colspan="4" class="header tou"></th>
            </tr>
            <tr>
               <td class="left1">用户名</td>
               <td class="left2">
                        <input class="easyui-validatebox" type="text" id="txtUserName" name="UserName" data-options="required:true,validType:'length[1,50]'" />
               </td>
               <td class="left1">密  码</td>
               <td class="left2">
                        <input class="easyui-validatebox" type="text" id="txtPassword" name="Password" data-options="required:true,validType:'length[1,50]'" />
               </td>
            </tr>
            <tr>
               <td bgcolor="#F0F7FD" colspan="4" class="btttonCenter">
                  <a href="javascript:void(0)" class="easyui-linkbutton" id="btnAdd" iconcls="icon-ok">确定</a>
                  <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#AddDialog').dialog('close')">关闭</a>
               </td>
            </tr>
         </table>
      </div>
   </form>
</div>
<!--设置修改的弹出层-->
<div id="UpdateDialog" class="easyui-dialog" style="width: 650px; padding: 1px" closed="true" resizable="true" modal="true" data-options="iconCls: 'icon-edit',buttons: '#dlg-buttons'">
   <form id="updateForm" method="post" novalidate="novalidate">
      <div class="talbe_border">
         <table id="tblUpdate" border="0" cellpadding="0" cellspacing="0" class="talbe_list">
            <tr>
               <th colspan="4" class="header tou"></th>
            </tr>
            <tr>
               <td>
                  <input type="hidden" id="txtIDUpdate" name="ID" />
               </td>
            </tr>
            <tr>
               <td class="left1">用户名</td>
               <td class="left2">
                        <input class="easyui-validatebox" type="text" id="txtUserNameUpdate" name="UserName" data-options="required:true,validType:'length[1,50]'" />
               </td>
               <td class="left1">密码</td>
               <td class="left2">
                        <input class="easyui-validatebox" type="text" id="txtPasswordUpdate" name="Password" data-options="required:true,validType:'length[1,50]'" />
               </td>
            </tr>
            <tr>
               <td bgcolor="#F0F7FD" colspan="4" class="btttonCenter">
                  <a href="javascript:void(0)" class="easyui-linkbutton" id="btnUpdate" iconcls="icon-ok">确定</a>
                  <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#UpdateDialog').dialog('close')">关闭</a>
               </td>
            </tr>
         </table>
      </div>
   </form>
</div>
<!--设置详细信息的弹出层-->
<div id="DetailDialog" class="easyui-dialog" style="width: 650px; padding: 1px" closed="true" resizable="true" modal="true" data-options="iconCls: 'icon-view',buttons: '#dlg-buttons'">
   <form id="detailForm" method="post" novalidate="novalidate">
      <div class="talbe_border">
         <table id="tblDetail" border="0" cellpadding="0" cellspacing="0" class="talbe_list">
            <tr>
               <th colspan="4" class="header tou"></th>
            </tr>
            <tr>
               <td class="left1">UserName</td>
               <td class="left2">
                            <input type="text" name="UserName" id="txtUserNameDetail" readonly="true" />
               </td>
               <td class="left1">Password</td>
               <td class="left2">
                            <input type="text" name="Password" id="txtPasswordDetail" readonly="true" />
               </td>
            </tr>
            <tr>
               <td bgcolor="#F0F7FD" colspan="4" class="btttonCenter">
                  <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#DetailDialog').dialog('close')">关闭</a>
               </td>
            </tr>
         </table>
      </div>
   </form>
</div>
